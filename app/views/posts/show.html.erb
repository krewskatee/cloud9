<h1><%= @post.title %></h1>
<h2><%= @post.user.username %></h2>
<h2><%= @post.content %></h2>
<%= image_tag @post.post_image.url %>



<% if @post.tags.first %>
  <% @post.tags.each do |tag| %>
    Tags: <%= tag.title %>
  <% end %>
  <% end %>

  <% if current_user && current_user == @post.user || current_user && current_user.admin %>
    <%= link_to "Delete", "/post/#{@post.id}", method: :delete, class: 'btn btn-danger' %>
    <%= link_to "Edit", "/post/#{@post.id}/edit", method: :get, class: 'btn btn-info' %>
  <% end %>

  <% @comments.each do |comment| %>
    <h6><%= comment.user.username %></h2>
    <h6><%= comment.content %></h5>
    <a href="../comment/<%= comment.id %>/edit">Edit</a>
    <%= link_to "Delete", "/comment/#{ comment.id }", method: :delete %>
  <% end %>
  <% if current_user %>
    <%= form_for @comment, url: "/comment", method: :post, html: { multipart: true } do |f| %>
      <%= f.hidden_field :post_id, value: @post.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.label :content %>:
      <%= f.text_field :content %><br />
      <%= f.submit %>
    <% end %>
    <%= link_to "Back", "/", method: :get, class: 'btn btn-success' %>
<% end %>
<h3>Visits: <%= @post.visit_count %></h3>
