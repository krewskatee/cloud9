  <% if current_user %>
    <%= form_for @comment, url: "/comment/#{@comment.id}", method: :patch, html: { multipart: true } do |f| %>
      <%= f.label :content %>:
      <%= f.text_field :content %><br />
      <%= f.submit %>
    <% end %>
  <%= link_to "Back", "/", method: :get, class: 'btn btn-success' %>
<% end %>
